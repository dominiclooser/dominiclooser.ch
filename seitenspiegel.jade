extends _base

block scripts
   script(src='https://cdnjs.cloudflare.com/ajax/libs/svg.js/2.4.0/svg.min.js')
   script(src='scripts/page-layout.js')

block content

   .container
      
      h1.page-heading Seitenproportionen

     
      .proportions
         for proportion in proportions
            - width = 100
            svg(width=width, height=proportion.ratio * width)
               rect(width='100%', height='100%', fill='black')
      
      for proportion in proportions
         - width = 100; height = proportion.ratio * width
         .proportion
            figure
               svg(viewBox='0 0 ' + width + ' ' + height)
                  rect(width='100%', height='100%', fill='black')
            .caption
               h3= proportion.title


      
            

