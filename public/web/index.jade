extends ../_default

block content
   .page-intro
      section.s1
         p.
            Ich gestalte und entwickle Webseiten: individuell, reduziert, ästhetisch.
      //- section.s1
      //-    h3.h3 Stärken
      //-    ul
      //-       li (Mikro)-Typographie
      //-       li Kompetent sowohl im Technischen als auch im Gestalerischen
   ul.page-content.underline-on-hover-links.sites
      for site in sites
         li.site
            .site-description
               h2.h1.site-title=  site.title
               if site.link
                  a(href=site.link).arrow-link.h2.site-link Live
               else
                  p (offline)
            a(href='/images/large/web/' + site.image, data-lightbox=site.title, data-title=site.title).site-image
               img(src='/images/large/web/' + site.image)
            

block append scripts
   script(src='/scripts/lightbox.min.js')
               
