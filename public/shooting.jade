   section.s1
      h2.h2 DarstellerInnen
      ul#candidates
         for person in models
            li
               .person.twocols
                  div
                     h3.person-name= person.name
                     p.person-comments= person.comments
                  a(href='/images/large/shooting/' + person.image, data-lightbox='people', data-title=person.name)
                     img(src='/images/small/shooting/' + person.image)

   section.s1
      h2.h2 Stil
      p Absurd und schön

   section.s1
      h2.h2 Inspiration
      section.s2
         ul.default-list 
            li Die Antwoord
            li Deichkind
            li Pet Shop Boys
      section.s2
         .masonry
            for filename in public.images.small.shooting.inspiration._contents
               figure.masonry-item
                  a(href='images/large/shooting/inspiration/' + filename, data-lightbox='inspiration')
                     img(src='images/small/shooting/inspiration/' + filename)
