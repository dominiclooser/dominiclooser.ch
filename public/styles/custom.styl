body
    min-height: 100%

.h2
    font-size: var(--xxl)
    // font-weight: bold

.h3
    font-size: var(--xl)

footer
    font-size: var(--s)
    background: footerBackground
    color: footerColor
    padding: var(--unit) 0
    margin-top: calc(3*var(--unit))
    border-top: 1px dotted dark

.image-column
    img
        margin-bottom: var(--semi-unit)

.page-heading
    // text-transform: uppercase
    // text-align: center
    font-weight: bold
    font-size: var(--xxxxxxl)
    margin-top: var(--four-units)
    margin-bottom: var(--four-units)

.indent
    text-indent: 50px

.spaced-paragraphs
    p+p
        margin-top: var(--semi-unit)


// page header

.desktop-page-header 
    @media mobile-nav
        display: none
    a
        text-decoration: none
    .logo
        color: primary-color
        font-family: heading-font
    padding-top: var(--semi-unit)
    padding-bottom: var(--semi-unit)
    border-bottom: 2px solid dark
    display: flex
    justify-content: space-between

.mobile-page-header
    @media desktop-nav
        display: none
    font-weight: bold
    font-family: heading-font
    padding: var(--semi-unit) 0
    border-bottom: 2px solid dark
    display: flex
    justify-content: center

.open-nav
    cursor: pointer

.hamburger
    height: var(--two-units)
    fill: none
    stroke-width: 0.5
    stroke: dark
    cursor: pointer

.desktop-nav
    ul
        separated-list()

.mobile-nav
    display: none
    stacked-list(border: none, verticalpadding: 0px)
    position: absolute
    top: 0
    height: 100vh
    width: 100vw
    background: primary-color
    z-index: 1
    left: 0
    font-family heading-font
    color: white
    text-align: center
    li
        line-height: 1
        font-size: var(--xxxxxl)
        font-weight: bold
    li:hover
        background: white
        color: primary-color
    .close
        margin: var(--two-units) 0 
        stroke: white
        stroke-width: 6
        height: var(--unit)
        cursor: pointer


// homepage

#site-title
    border-bottom: none
    font-weight: bold
    line-height: 0.85
    // text-align: center
    
#title
    font-size: var(--xxxxxl)
    text-transform: uppercase
    color: text-color

#subtitle
    font-size: var(--xxxl)
    text-transform: uppercase
    // color: primary-color
    a:hover
        background: primary-color
        color: white

.intro
    margin-bottom: var(--three-units)
    @extend .spaced-paragraphs
    @extend .discreet-links
    section+section
        margin-top: var(--unit)
    h2
        margin-bottom: var(--semi-unit)
        @extend .h2
    ul 
        arrow-list()
    ul+p
        margin-top: var(--semi-unit)
    

// web

#sites
    @media two-columns
        display: grid
        grid-template-columns: 1fr 1fr
        grid-column-gap: var(--unit)
        grid-row-gap: var(--unit)

.site
    background: rgb(245, 245, 245)
    &:not(:first-child)
        margin-top: var(--two-units)
        @media two-columns
            margin-top: 0
    figcaption
        padding: var(--unit) 10px
        display: flex
        justify-content: space-between
        h2
            font-family: body-font
            font-size: var(--m)
            // font-weight: bold
            // line-height: 0.8
            


// text

.text-nav
    ul
        separated-list('/')

#text
    h2
        margin-bottom: var(--unit)
   
#text-list
    stacked-list(border=1px dotted soft-border-color)
    highlight-list()
    li
        padding: var(--semi-unit) var(--semi-unit)
    
    li:first-child
        display:none
    li:nth-child(2)   
        border-top: 1px dotted soft-border-color
    .text-title
        font-size: var(--l)
        font-family: body-font
        font-weight: normal
        text-transform: none

#performance-list
    stacked-list(border: 1px dotted soft-border-color)
    p 
        margin: 0
    li 
        display: flex
        time
            flex: 1
        p 
            flex: 2

.text
    margin-top: var(--three-units)
    h2
        font-family: inherit
        font-size: var(--m)
        font-weight: normal
        text-transform: uppercase
        margin-top: 0
        margin-bottom: var(--semi-unit)
    .text-title
        font-family: heading-font
        text-transform: uppercase
        font-size: var(--xxl)
        text-align: center
        font-weight: 300
        color: primary-color
        margin-bottom: var(--two-units)
        line-height: 1.3

.text.listofshorts
    margin-left: auto
    margin-right: auto
    max-width: 400px 
    ul
        list-style: none
    li
        padding: var(--two-units) 0
        border-bottom: 1px solid dark
    li:first-child
        padding-top 0
    p
        font-size: var(--xl)
        line-height: 1.3
        font-family: 'EB Garamond'
        font-style: italic
        text-align: center

.spaced
    p:not(:last-of-type)
        margin-bottom: calc(0.5*var(--unit-2))

.bigspaces
    p:not(:last-of-type)
        margin-bottom: var(--unit-2)

.dialogue 
    p
        text-indent: 0
    em
        margin-top: 20px


// grafik

.lb-caption
    font-size: var(--s) !important
    font-family: heading-font !important
    font-weight: normal !important
    color: white !important

.lb-dataContainer
    margin-top: 8px !important

.masonry-item
    margin-bottom: 33px
    width: 100%
    @media (min-width: 400px)
        width: calc(0.5 * (100% - 33px))
    @media (min-width: 700px)
        width: calc(0.33333 * (100% - 2 * 33px))
    figcaption
        margin-top: var(--semi-unit)
        padding: 0.2em
        border-top: 2px solid dark
        border-bottom: @border-top
        font-family: heading-font
        font-size: var(--s)
        font-weight: 600

// shop

#shop-intro
    margin: 0 auto

#shop
    background-color: white

#spreadshirt-shop
    margin-top: var(--two-units)
    *
        font-family: body-font
        font-size: var(--m)

#filterBar
    *
        font-size: var(--s)
    .sprd-Item
        border-bottom: 1px dotted dark
    .sprd-Label
        line-height: 1.3
        padding: 10px 0

.sprd-price
        *
            font-size:var(--s)

#grossgedrucktes
    margin-top: var(--two-units)
    font-size: var(--l)

 
// about

.about
    @extends .spaced-paragraphs
    section
        margin-bottom: var(--two-units)
    h2
        margin-bottom: var(--unit)
        @extends .h2
    h3
        margin: var(--unit) 0 var(--semi-unit) 0
        @extends .h3
    ul
        margin: 0
        stacked-list(verticalpadding: 0)