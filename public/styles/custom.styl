//////////
// home //
//////////

#home-page
    .page-heading
        text-transform: uppercase
    .page-title
        separated-list(separator: '/', spacing-left: 0.2em, spacing-right: 0.2em) 
        font-size: var(--xxxl)
        @media big-heading
            font-size: var(--xxxxl)
    .page-subtitle  
        font-family: body-font
        margin-top: 0em
        font-size: var(--l)
        @media big-heading
            font-size: var(--xl)


//////////
// text
/////////

.text-nav
    ul
        separated-list('â€¢')
        margin-top: var(--unit)

.text-list
    stacked-list(border=1px dotted soft-border-color)
    highlight-list()
    li
        padding: var(--semi-unit) var(--semi-unit)
        &:nth-child(2)   
            border-top: 1px dotted soft-border-color
        &:nth-child(n+4)
            display: none
    .text-title
        font-size: var(--l)
        font-family: body-font
        font-weight: normal
        text-transform: none
        margin-bottom: 0.4em
    p
        line-height: 1.2


.text
    max-width: text-width
    margin-top: var(--three-units)
    h2
        font-family: inherit
        font-size: var(--m)
        font-weight: normal
        text-transform: uppercase
        margin-top: 0
        margin-bottom: var(--semi-unit)
    .text-title
        @extends .h1
        margin-bottom: var(--two-units)

.text.listofshorts
    margin-left: auto
    margin-right: auto
    max-width: 400px 
    .text-title
        text-align: center
    ul
        stacked-list(spacing: var(--two-units), border: 1px solid dark)
    p
        @extends .poetic-short
   

.spaced
    p:not(:last-of-type)
        margin-bottom: calc(0.5*var(--unit-2))

.bigspaces
    p:not(:last-of-type)
        margin-bottom: var(--unit-2)

.dialogue 
    p
        text-indent: 0
    em
        margin-top: 20px


/////////
// web //
/////////

#web-page
    background: #e
  
.sites
    max-width: 800px
    stacked-list(spacing:var(--unit), border:4px solid dark)

.site
    @media two-columns-sites
        display: grid
        grid-template-columns: 1fr 1fr
        grid-column-gap: var(--unit)

.site-image
    width: 100%

.site-description
    display: flex
    justify-content: space-between
    align-items: bottom
    line-height: var(--unit) !important
    vertical-align: bottom
    font-family: heading-font
    text-transform: uppercase
    @media two-columns-sites
        display: block
        order: 5
    
.site-title
    font-family: heading-font
    font-size: var(--xl)
    @media big-mobile
        font-size: var(--xxl)
    @media big-heading
        font-size: var(--xxxxl)
    margin-bottom: var(--semi-unit)


////////////
// grafik //
////////////

.lb-caption
    font-size: var(--m) !important
    font-family: body-font !important
    font-weight: normal !important
    color: white !important
    letter-spacing: 0.1em
    text-transform: uppercase

.lb-dataContainer
    margin-top: 8px !important

.masonry-item
    margin-bottom: 33px
    // width: 100%
    @media (min-width: 500px)
        width: calc(0.5 * (100% - 33px))
    @media (min-width: 700px)
        width: calc(0.33333 * (100% - 2 * 33px))
    @media (min-width: 1200px)
        width: calc(0.25 * (100% - 3 * 33px))
    figcaption
        margin-top: var(--semi-unit)
        padding: 0.2em
        border-top: 2px solid dark
        border-bottom: @border-top
        font-family: heading-font
        font-size: var(--s)
        font-weight: 600


