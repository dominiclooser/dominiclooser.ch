
//////////////
// homepage
/////////////

#home-page
    .page-heading
        font-family: heading-font
        font-weight: 700
        text-transform: uppercase
    .page-title
        line-height: 0.7
        font-size: var(--xxxxl)
        @media big-heading
            font-size: var(--xxxxxl)
            display: inline  
    .page-subtitle  
        separated-list(separator: '/', spacing-left: 0.2em, spacing-right: 0.2em) 
        a:hover
            color: primary-color
        font-size: var(--xl)
        @media big-heading
            separated-list(separator: ' ', spacing-left: 0, spacing-right: 0)
            font-size: var(--xxxxxl)//var(--xl)
            display: inline
            &:before
                content: ' '
            li:nth-child(1)
                color: primary-color
            li:nth-child(2)
                color: secondary-color
            li:nth-child(3)
                color: tertiary-color
             a:hover
                color: dark
    .page-main
        @extends .underline-on-hover-links


//////////
// text
/////////

.text-nav
    ul
        separated-list('â€¢')
        margin-top: var(--unit)

.text-list
    stacked-list(border=1px dotted soft-border-color)
    highlight-list()
    li
        padding: var(--semi-unit) var(--semi-unit)
        &:nth-child(2)   
            border-top: 1px dotted soft-border-color
        &:nth-child(n+4)
            display: none
    .text-title
        font-size: var(--l)
        font-family: body-font
        font-weight: normal
        text-transform: none
        margin-bottom: 0.4em
    p
        line-height: 1.2


.text
    margin-top: var(--three-units)
    h2
        font-family: inherit
        font-size: var(--m)
        font-weight: normal
        text-transform: uppercase
        margin-top: 0
        margin-bottom: var(--semi-unit)
    .text-title
        @extends .h1
        margin-bottom: var(--two-units)

.text.listofshorts
    margin-left: auto
    margin-right: auto
    max-width: 400px 
    .text-title
        text-align: center
    ul
        stacked-list(spacing: var(--two-units), border: 1px solid dark)
    p
        @extends .poetic-short
   

.spaced
    p:not(:last-of-type)
        margin-bottom: calc(0.5*var(--unit-2))

.bigspaces
    p:not(:last-of-type)
        margin-bottom: var(--unit-2)

.dialogue 
    p
        text-indent: 0
    em
        margin-top: 20px

// web

#sites
    @extends .grid

.site
    background: light-overlay-color
    figcaption
        padding: var(--unit) var(--semi-unit)
        h2
            font-family: heading-font
        ul
            separated-list(',', padding-left=0)

// grafik

.lb-caption
    font-size: var(--m) !important
    font-family: body-font !important
    font-weight: normal !important
    color: white !important
    letter-spacing: 0.1em
    text-transform: uppercase

.lb-dataContainer
    margin-top: 8px !important

.masonry-item
    margin-bottom: 33px
    width: 100%
    @media (min-width: 400px)
        width: calc(0.5 * (100% - 33px))
    @media (min-width: 700px)
        width: calc(0.33333 * (100% - 2 * 33px))
    figcaption
        margin-top: var(--semi-unit)
        padding: 0.2em
        border-top: 2px solid dark
        border-bottom: @border-top
        font-family: heading-font
        font-size: var(--s)
        font-weight: 600

// shop

#shop-intro
    margin: 0 auto

#shop
    background-color: white

#spreadshirt-shop
    margin-top: var(--two-units)
    *
        font-family: body-font
        font-size: var(--m)

#filterBar
    *
        font-size: var(--s)
    .sprd-Item
        border-bottom: 1px dotted dark
    .sprd-Label
        line-height: 1.3
        padding: 10px 0

.sprd-price
        *
            font-size:var(--s)

#grossgedrucktes
    margin-top: var(--two-units)
    font-size: var(--l)

// about

#about-page
    main
        @extends .spaced-paragraphs
        .textplus
            margin-bottom: var(--two-units)
        h2
            @extends .h2
        h3
            @extends .h3
        ul
            margin: 0
            stacked-list(spacing: 0)

#nureinwort-page
    .images
        @media two-columns
            display: grid
            grid-template-columns: 1fr 1fr 1fr
            grid-column-gap: var(--unit)
            grid-row-gap: var(--unit)
        img
            border: 1px solid  lightgray 


// inspiration

#inspiration-page
    .card
        ul
            stacked-list()

.lyrics
    margin-bottom: var(--two-units)
    stacked-list(border: 1px solid black, spacing: var(--unit))

.lyrics-text
    font-family: heading-font
    font-size: var(--xl)
    line-height: heading-line-height
    margin-bottom: var(--quarter-unit)