html 
  box-sizing: border-box

*, *:before, *:after 
  box-sizing: inherit

html
    height: 100%

body
    background-color: background-color
    color: text-color

img, video
    max-width: 100%

canvas, img
    vertical-align: middle

.hidden
    display: none

img
    max-height: 90vh

body
    color: text-color
    font-size: var(--m)
    font-family: body-font
    line-height: var(--line-height)
    text-rendering: geometricPrecision

@font-face 
  font-family: 'Druk Text'
  src: url('/fonts/DrukText-Medium-Web.woff2') format('woff2'),
       url('/fonts/DrukText-Medium-Web.woff') format('woff')
  font-weight: 500
  font-style: normal
  font-stretch: normal

@font-face
  font-family: 'Druk Text'
  src: url('/fonts/DrukText-MediumItalic-Web.woff2') format('woff2'),
       url('/fonts/DrukText-MediumItalic-Web.woff') format('woff')
  font-weight: 500
  font-style: italic
  font-stretch: normal

@font-face 
    font-family: 'Druk Text'
    src: url('/fonts/DrukText-Bold-Web.eot')
    src: url('/fonts/DrukText-Bold-Web.eot?#iefix') format('embedded-opentype'),
        url('/fonts/DrukText-Bold-Web.woff2') format('woff2'),
        url('/fonts/DrukText-Bold-Web.woff') format('woff')
    font-weight: 700
    font-style: normal
    font-stretch: normal




