.arrow-link
    display: flex
    &:before
        content: '\2192 \a0'

.color-on-hover-links
    a:hover
        color: link-color

.underline-on-hover-links
    a:hover
        text-decoration: underline

.spaced-paragraphs
    p+p
        margin-top: var(--semi-unit)

.text-section
    margin-bottom: var(--two-units)

.card
    padding: var(--unit) var(--semi-unit)
    @media(min-width: 400px)
        padding: var(--unit)
    background: card-background-color
    // border: 2px solid primary-color
    img + p
        margin-top: var(--unit)
    &:nth-child(3n+1)
        background: primary-color
    &:nth-child(3n+2)
        background: secondary-color
    &:nth-child(3n+3)
        background: tertiary-color
    

.card-section + .card-section
    margin-top: var(--semi-unit)

.card-title
    margin-bottom: var(--semi-unit)
    font-family: heading-font
    font-weight: 700
    font-size: var(--xl)

.card-images
    display: grid
    grid-template-columns: 1fr 1fr
    grid-column-gap: var(--semi-unit)

.grid
    display: grid
    grid-template-columns: repeat(auto-fit, minmax(min-column-width, 1fr ))
    grid-column-gap: var(--unit)
    grid-row-gap: var(--unit)

.cards-column
    .card + .card
        margin-top: var(--unit)
    

.textplus
    @media textplus
        display: flex

.textplus-text
    margin: 0 0 var(--unit) 0
    @media textplus
        flex: 2
        margin: 0 var(--unit) 0 0

.textplus-plus
    @media textplus
        align-self: left
        flex: 1

.plustext
    @media textplus
        display: flex

.plustext-text
    margin: var(--unit) 0 0 0
    @media textplus
        margin: 0 0 0 var(--unit)

.plustext-plus
    align-self: left

.arrow-list
    list-style: none
    li
        display: flex
    li:before
        content: '\2192 \a0'

stacked-list(spacing = var(--semi-unit), border = 1px dotted dark)
    list-style: none
    padding: 0
    li  
        padding: spacing 0 
        border-bottom: border
        &:first-child
            border-top: border

separated-list(separator = '', spacing-left = 0.5em, spacing-right = 0.5em)
    list-style: none
    margin: 0
    li 
        display: inline
    li:not(:last-child)
        ::after
            margin-left: spacing-left
            margin-right: spacing-right
            content: separator
    li:not(:first-child)
        margin-left: spacing

.definition-list
    dt
        display: inline
        font-weight: bold
        &::after
            content: ':'

    dd
        display: inline
        margin-left:var(--unit) 
        width: 100%
        &::after
            content: '\A'
            white-space: pre

highlight-list(background = dark, color = white)
    li:hover
        background: background
        color: color
        cursor: pointer
    a:hover
        color: inherit
    a
        text-decoration: none

.wrapper
    margin: 0 auto
    padding: 0 var(--unit)
    max-width: max-page-width

.full-width-wrapper
    padding: 0 var(--semi-unit)
    @media large-padding
        padding: 0 var(--two-units)

.center-text-wrapper
    margin: 0 auto
    padding: 0 var(--unit)
    max-width: text-width

.text-wrapper
    max-width: text-width