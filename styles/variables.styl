//
// breakpoints
//
textplus = '(min-width: 980px)'
bigScreen = '(min-width: 40em)'

//
// typography
//

bodyFont = Inconsolata
headerFont = 'Libre Franklin'
textWidth = 800px

:root
    --scale-factor: 1.2

    --line-height: 1.4
    --font-size: 19px
    @media bigScreen
        --font-size: 22px
    --unit: calc(var(--line-height) * var(--font-size))
    
    --line-height-2: 1.7
    --font-size-2: 16px
    @media bigScreen
        --font-size-2: 22px
    --unit-2: calc(var(--line-height-2) * var(--font-size-2))

//
// colors
//
dark = rgba(0,0,0,0.87)
light-grey = #f7f7f7
middle-grey = #e8e6e6
background-color = #EAEEEF //#FEFDCA //#fdfd77 //#F0F9F4 //light-grey //#eff6fb
text-color = dark
page-header-background-color = dark
soft-border-color = grey
footerBackground = inherit
page-header-text-color = white
primaryColor =  #DB222A //#AAB1B3  //#f71e3d //#fd463e  // pink #F3007A

//
// misc
//
baseBorder = 1px solid text-color
maxPageWidth = 1000px
list-separator = '/'
separated-list-margin = 5px
