    //     line-height: calc(2*var(--line-height-2))

#text-list
    margin-bottom: calc(2*var(--unit))
    li:first-child
        display:none
    li:nth-child(2)   
        border-top: 1px solid softBorderColor
    h2
        margin: 0
        font-weight: normal

.fullscreen
    min-height: 105vh
    height: 105vh

