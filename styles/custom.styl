#performance-list
    li 
        display: flex
        justify-content: space-between

#contact
    margin-top: 2*unit

#about
    h2
        margin-top: 2*unit
    a
        text-decoration: underline
        :hover
            color: primaryColor

.text
    margin-top: 3*unit2
    h1
        line-height: unit2
        margin-bottom: 3*unit2
        font-size: xxl
        @media bigScreen
            font-size: xxxl
        
    h2
        // font-weight: bold
        // font-style: italic
        line-height: unit2
        margin-top: 0
        border-bottom: 1px dotted dark
        display: inline-block
        font-size: l
        @media bigScreen
            font-size: xl
    p 
        line-height: lineHeight2
        text-align: justify
        font-family: 'Noto Serif'

.fullscreen
    min-height: 105vh
    height: 105vh

#text-list
    margin-bottom: 2*unit
    li:first-child
        display:none
    li:nth-child(2)   
        border-top: 1px solid softBorderColor
    h2
        margin: 0
        font-weight: normal

#static-nav-container
    background-color: #f7f7f7

#static-nav
    padding: unit 0
    ul  
        list-style: none
        margin: 0
    li 
        display: inline
    li:not(:last-child):after
        content: ' / '

#site-title
    p 
        margin: 0

.section-header
#site-title
      margin-top: 3*unit
      margin-bottom: 3*unit

#homepage-nav
    ul
        list-style: none
    li:before
        content: '\2192 \a0'

.item-box
    display: flex
    flex-direction: column

.logo-box
    flex-grow: 2
    display: flex
    justify-content: center
    align-items: center
 
.logo
    max-width: 66%
    max-height: 66%
    width: 300px   

.text-box
    flex-grow: 1
    display: flex
    justify-content: center
    align-item: center
    
.item-title
    font-weight: normal
    margin: 0