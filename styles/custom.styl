body
    min-height: 100%
footer
    font-size: var(--s)
    background: footerBackground
    color: footerColor
    padding: var(--unit) 0
    margin-top: calc(3*var(--unit))
    border-top: 1px dotted dark
.page-header
.stacked-list
    @extends .unmarked-links
.page-heading
    text-transform: uppercase
    margin-top: calc(3*var(--unit))
    margin-bottom: calc(2*var(--unit))

.page-heading:not(#site-title)
    color: primaryColor

.indent
    text-indent: 50px


.spaced-paragraphs
    p + p
        margin-top: calc(0.5*var(--unit))
        
// homepage
#title
    font-size: var(--xl)

#subtitle
    margin-top: calc(0.1 * var(--unit))
    font-size: var(--l)
    color: primaryColor

#intro
    margin-bottom: var(--unit)
    @extend .spaced-paragraphs

// text
#text
    h2
        margin-bottom: var(--unit)

#text-list
    @extends .highlight-list
    margin-bottom: calc(2*var(--unit))
    
    a
        display: block

    li:first-child
        display:none
    
    li:nth-child(2)   
        border-top: 1px solid soft-border-color
    
    h2
        margin: 0
        font-weight: normal

#performance-list
    p 
        margin: 0
    li 
        display: flex
        time
            font-style: italic
            flex: 1
        p 
            flex: 2

.text
    font-family: 'Libre Baskerville'
    font-size: var(--m-2)
    line-height: var(--line-height-2)
    margin-top: calc(3*var(--unit-2))
    h1
        font-family: inherit
        font-weight: normal
        font-size: var(--xxl-2)
        margin-bottom: calc(2*var(--unit-2))
        text-transform: none
    h2
        font-family: inherit
        font-size: var(--l-2)
        font-weight: normal
        text-transform: none
        line-height:var(--unit-2)
        margin-top: 0
        // border-bottom: 1px dotted dark
        // display: inline-block
        margin-bottom: calc(0.5*var(--unit-2))


.spaced
    p:not(:last-of-type)
        margin-bottom: calc(0.5*var(--unit-2))

.bigspaces
    p:not(:last-of-type)
        margin-bottom: var(--unit-2)



.dialogue
    
    p
        text-indent: 0
    
    em
        margin-top: 20px

// about
#about
    @extends .spaced-paragraphs
    h2
        margin: var(--unit) 0 calc(0.5*var(--unit)) 0
