body
    display: flex
    flex-direction: column
    min-height: 100%
main
    flex-grow: 1
footer
    font-size: var(--s)
    background: footerBackground
    color: footerColor
    padding: var(--unit) 0
    border-top: 1px solid dark
.page-header
.stacked-list
    @extends .unmarked-links
.page-heading
    text-transform: uppercase
    margin-top: calc(2*var(--unit))
    margin-bottom: calc(2*var(--unit))
.indent
    text-indent: 50px
// homepage
#intro
    margin-bottom: var(--unit)
// text
#text-list
    margin-bottom: calc(2*var(--unit))
    li:first-child
        display:none
    li:nth-child(2)   
        border-top: 1px solid softBorderColor
    h2
        margin: 0
        font-weight: normal
#performances
    margin-left: calc(2*var(--unit))
#performance-list
    p 
        margin: 0
    li 
        display: flex
        time
            font-style: italic
            flex: 1
        p 
            flex: 2
.text
    margin-top: calc(2*var(--unit2))
    h1
        margin-bottom: calc(1*var(--unit2))
        text-transform: uppercase
    h2
        line-height:var(--unit)
        margin-top: 0
        border-bottom: 1px dotted dark
        display: inline-block
        // font-size: var(--l)
    // p 
    //     font-size: var(--font-size-2)
    //     line-height: var(--line-height-2)
    p:not(:first-of-type)
        @extends .indent 
.text.justify
    p 
        text-align: justify
.text.dialogue
    em
        margin-top: 20px

// about
#about
    h2
        margin-top: calc(2*var(--unit))
    margin-left: 0

// grafik
.graphics
    @media bigScreen
        margin: 0 auto

.grid-item
    margin-bottom: 30px
    width: 300px
    h2
        margin-top: calc(0.5 * var(--unit))
        line-height: 1
        text-transform: uppercase
        font-size: var(--m)