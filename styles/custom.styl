body
    min-height: 100%

nav 
    padding-top: var(--semi-unit)
    padding-bottom: var(--semi-unit)
    border-bottom: 1px dotted dark
    display: flex
    justify-content: space-between
    .logo
        color: primary-color
        margin-right: var(--semi-unit)

footer
    font-size: var(--s)
    background: footerBackground
    color: footerColor
    padding: var(--unit) 0
    margin-top: calc(3*var(--unit))
    border-top: 1px dotted dark

.image-column
    img
        margin-bottom: var(--semi-unit)

.page-header
.stacked-list
    @extends .unmarked-links

.page-heading
    text-transform: uppercase
    margin-top: var(--triple-unit)
    margin-bottom: var(--double-unit)

// .page-heading:not(#site-title)
//     color: primary-color

.indent
    text-indent: 50px

.spaced-paragraphs
    p + p
        margin-top: var(--semi-unit)
        
// homepage
#title
    font-size: var(--xl)

#subtitle
    margin-top: calc(0.1 * var(--unit))
    font-size: var(--l)
    color: primary-color

#intro
    margin-bottom: var(--triple-unit)
    @extend .spaced-paragraphs

// text
#text
    h2
        margin-bottom: var(--unit)

#text-list
    @extends .highlight-list
    li:first-child
        display:none
    li:nth-child(2)   
        border-top: 1px solid soft-border-color
    .text-title
        font-size: var(--l)
        font-family: body-font
        font-weight: normal
        text-transform: none
    // .text-description
    //     margin-top: var(--semi-unit)

#performance-list
    p 
        margin: 0
    li 
        display: flex
        time
            font-style: italic
            flex: 1
        p 
            flex: 2

.text
    margin-top: var(--triple-unit)
    h1
        font-family: body-font
        font-weight: normal
        font-size: var(--xl)
        text-transform: none
        margin-bottom: var(--double-unit)
    h2
        font-family: inherit
        font-size: var(--m)
        font-weight: normal
        text-transform: uppercase
        margin-top: 0
        margin-bottom: var(--semi-unit)

.spaced
    p:not(:last-of-type)
        margin-bottom: calc(0.5*var(--unit-2))

.bigspaces
    p:not(:last-of-type)
        margin-bottom: var(--unit-2)



.dialogue
    
    p
        text-indent: 0
    
    em
        margin-top: 20px

// about
#about
    @extends .spaced-paragraphs
    section
        margin-bottom: var(--double-unit)
    h2
        margin-bottom: var(--unit)
    h3
        margin: var(--unit) 0 var(--semi-unit) 0
        text-transform: uppercase
    ul
        margin: 0

// grafik

.grid-item
    margin-bottom: 30px
    width: 300px
    h2
        margin-top: calc(0.5 * var(--unit))
        line-height: 1
        text-transform: uppercase
        font-size: var(--m)
        
iframe
    width: 100%
    height: 90vh

// shop
#shop
    background-color: white

#spreadshirt-shop
    margin-top: var(--double-unit)
    *
        font-family: body-font
        font-size: var(--m)

#filterBar
    *
        font-size: var(--s)
    .sprd-Item
        border-bottom: 1px dotted dark
    .sprd-Label
        line-height: 1.3
        padding: 10px 0

.sprd-price
        *
            font-size:var(--s)

#grossgedrucktes
    margin-top: var(--double-unit)
    font-size: var(--l)