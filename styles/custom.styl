.proportions
    svg
        margin-left: 10px

.proportion
    display: flex 
    flex-direction: column
    border-top: 1px dotted dark
    
    height: 100vh

    figure 
        display: flex
        justify-content: center
        align-items: center
        height: 90vh

    svg
        height: 66.66vh
        rect
            fill: dark

    .caption
        border-top: 1px solid dark
        border-bottom: &border-top
        padding-left: 10px
        display: flex
        align-items: center
        height: 10vh
        *
            margin: 0

.page-header
.homepage-nav
.stacked-list
    @extends .unmarked-links

.site-title  
    p
        line-height: var(--unit)
        font-size: var(--l)
        color: primaryColor
        margin: 0

.site-title
.page-heading
    text-transform: uppercase
    margin-top: calc(2*var(--unit))
    margin-bottom: calc(2*var(--unit))

.current-link
    color: primaryColor

.intro
    p 
        margin-bottom: 0
    margin-bottom: calc(2*var(--unit))

.contact
    margin-top: calc(2*var(--unit))


#performance-list
    li 
        display: flex
        justify-content: space-between

#about
    h2
        margin-top: calc(2*var(--unit))

.text
    margin-top: calc(2*var(--unit2))
    h1
        line-height: calc(2*var(--unit2))
        margin-bottom: calc(2*var(--unit2))
        text-transform: uppercase
        color: primaryColor
        font-size: var(--xl)
    h2
        line-height:var(--unit2)
        margin-top: 0
        border-bottom: 1px dotted dark
        display: inline-block
        font-size: var(--l)
    p 
        font-size: var(--font-size-2)
        line-height: var(--line-height-2)
        font-family: 'Noto Serif'
    
.text.justify
    p 
        text-align: justify
.text.dialogue
    em
        margin-top: 20px
