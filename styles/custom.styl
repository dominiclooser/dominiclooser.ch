body
    min-height: 100%
footer
    font-size: var(--s)
    background: footerBackground
    color: footerColor
    padding: var(--unit) 0
    margin-top: calc(3*var(--unit))
    border-top: 1px dotted dark
.page-header
.stacked-list
    @extends .unmarked-links
.page-heading
    text-transform: uppercase
    margin-top: calc(3*var(--unit))
    margin-bottom: calc(2*var(--unit))

.page-heading:not(#site-title)
    color: primaryColor

.indent
    text-indent: 50px

.highlight-list
    li:hover
        background-color: dark
        color: white
        cursor: pointer
    a:hover
        color: inherit

.spaced-paragraphs
    p + p
        margin-top: calc(0.5*var(--unit))
        
// homepage
#title
    font-size: var(--xl)

#subtitle
    margin-top: calc(0.1 * var(--unit))
    font-size: var(--l)
    color: primaryColor

#intro
    margin-bottom: var(--unit)
    @extend .spaced-paragraphs

// text
#text
    h2
        margin-bottom: var(--unit)

#text-list
    @extends .highlight-list
    margin-bottom: calc(2*var(--unit))
    li:first-child
        display:none
    li:nth-child(2)   
        border-top: 1px solid soft-border-color
    h2
        margin: 0
        font-weight: normal

#performance-list
    p 
        margin: 0
    li 
        display: flex
        time
            font-style: italic
            flex: 1
        p 
            flex: 2
.text
    margin-top: calc(2*var(--unit2))
    h1
        margin-bottom: calc(1*var(--unit2))
        text-transform: uppercase
    h2
        line-height:var(--unit)
        margin-top: 0
        border-bottom: 1px dotted dark
        display: inline-block
    p:not(:first-of-type)
        @extends .indent 
.text.list
    p 
        text-indent: 0
    p:not(:last-of-type)
        margin-bottom: calc(0.5*var(--unit))


.text.justify
    p 
        text-align: justify
.text.dialogue
    em
        margin-top: 20px

// about
#about
    @extends .spaced-paragraphs
    h2
        margin: var(--unit) 0 calc(0.5*var(--unit)) 0
// grafik
.graphics
    @media bigScreen
        margin: 0 auto

.grid-item
    margin-bottom: 30px
    width: 300px
    h2
        margin-top: calc(0.5 * var(--unit))
        line-height: 1
        text-transform: uppercase
        font-size: var(--m)