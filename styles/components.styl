
.equal-columns 
    @media bigScreen
        display: flex
        .column
            flex: 1

.textplus
    @media textplus
        display: flex
.textplus-plus
    align-self: left
.textplus-text
    margin: var(--unit) 0 0 0
    @media textplus
        margin: 0 0 0 var(--unit)
        
            

.page-header
    background: pageHeaderBackground
    color: pageHeaderColor
    text-transform: uppercase

.colored
    color: primaryColor

.unmarked-links
    a
        text-decoration: none

.arrow-list
    list-style: none
    li:before
        content: '\2192 \a0'

.stacked-list
    list-style: none
    padding: 0
    li  
        padding: calc(0.5 * var(--unit)) 0 
        border-bottom: 1px solid softBorderColor
    li:first-child
        border-top: 1px solid softBorderColor

.separated-list
    list-style: none
    margin: 0
    li 
        display: inline
    li:not(:last-child)
        margin-right: 10px

.definition-list
    dt
        display: inline
        font-weight: bold
        &::after
            content: ':'

    dd
        display: inline
        margin-left:var(--unit) 
        width: 100%
        &::after
            content: '\A'
            white-space: pre

.container
    margin: 0 auto
    padding: 0 20px
    max-width: maxPageWidth

.text-container
    margin: 0 auto
    padding: 0 20px
    max-width: textWidth