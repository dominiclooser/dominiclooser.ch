header.desktop-page-header
   a(href='/').logo Dominic Looser
   nav.desktop-nav
      ul
         for item in nav
            unless item.link == '/'
               li: a(href=item.link, class=current.path[0] == item.link ? 'current-link' : '')= item.title

header.mobile-page-header
   a(href='/').logo 
      span Dominic 
      span Looser
   p.open-nav Menu

nav.mobile-nav
   svg.close(viewBox='0 0 100 100')
      line(x1=10, y1=10, x2=90, y2=90)
      line(x1=10, y1=90, x2=90, y2=10)
   ul.stacked-list
      for item in nav
         a(href=item.link, class=current.path[0] == item.link ? 'current-link' : ''): li= item.title