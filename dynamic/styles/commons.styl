//////////
// misc //
//////////

.masonry-item
    margin-bottom: 33px
    @media (min-width: 500px)
        width: calc(0.5 * (100% - 33px))
    @media (min-width: 700px)
        width: calc(0.33333 * (100% - 2 * 33px))
    @media (min-width: 1200px)
        width: calc(0.25 * (100% - 3 * 33px))
    figcaption
        margin-top: var(--semi-unit)
        padding: 0.2em
        border-top: 2px solid dark
        border-bottom: @border-top
        font-family: heading-font
        font-size: var(--s)
        font-weight: 600