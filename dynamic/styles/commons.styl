//////////////
// settings //
/////////////

.dl
    dl(weight: 400)

img
    max-width: 100%

//////////
// page //
//////////

.page-heading
    margin-top: var(--unit)
    & + .page-content
    & + .page-main
        margin-top: var(--two-units)
    
.page-title
    display: inline-block
    font-family: heading-font
    color: heading-color
    font-size: var(--xxl)
    @media big-mobile
        font-size: var(--xxxl)
    @media big-heading
        font-size: var(--xxxxl)
    line-height: heading-line-height

.page-intro
    max-width: text-width
    margin-bottom: var(--unit)
    @extend .spaced-paragraphs
    section+section
        margin-top: var(--unit)
    h2
        margin-bottom: var(--semi-unit)
    ul 
        arrow-list()
    ul+p
        margin-top: var(--semi-unit) 

.page-content
    display: grid
    gap: var(--unit)
    @media l
        grid-template-columns: 2fr 1fr
        
.page-aside
    padding: var(--unit)
    border: 1px solid var(--primary)


//////////
// menu //
//////////

.mobile-page-header
    padding-top: 0 !important
    font-family: heading-font
    text-transform: uppercase
    justify-content: flex-end !important
    @media desktop-nav
        display: none

.open-menu
    padding: var(--quarter-unit) var(--semi-unit)
    color: var(--primary)
    border-bottom: 1px solid currentColor
    border-left: @border-bottom
    border-bottom-left-radius: 0.5em
    letter-spacing: 0.03em

.mobile-nav
    font-size: var(--xxxxl)
    font-weight: 700
    line-height: 1.1
    li:hover
        background: dark
        color: var(--primary)

.close
    width: calc(1.5*var(--unit))
    stroke: dark

.desktop-page-header
    @media desktop-nav
        display: flex


///////////
// cards //
///////////

.card
    @extends .spaced-paragraphs
    background: var(--card-background-color)
    padding: var(--semi-unit) var(--semi-unit)
    @media m
        padding: var(--two-units) var(--unit)

    p+ul 
        margin-top: var(--semi-unit)

    .button-wrapper
        display: flex 
        padding-top: var(--unit)

.card-background-image
    object-fit: contain

.card-header + .card-main
    margin-top: var(--semi-unit)

.card-title
    font-size: var(--l)

.card-section + .card-section
    margin-top: var(--semi-unit)

.card-list
    vlist(spacing: 0.5em, border: 1px solid dark)

.card-images
    display: grid
    grid-template-columns: 1fr 1fr
    grid-gap: var(--semi-unit)
    img
        max-height: none

.cards
    grid(min-column-width: 300px)
