.s1-header + .s1-main
    margin-top: var(--quarter-unit)

.s1 + .s1
    margin-top: var(--unit)

.s2 + .s2 
    margin-top: var(--semi-unit)

.s2-header + .s2-main
    margin-top: var(--semi-unit)

.h2
    font-size: var(--l)
    font-weight: bold
    color: heading-color

.h3
    font-family: heading-font


.page-subtitle
    font-family: heading-font
    font-size: var(--l)

.poetic-short
    font-size: var(--xl)
    line-height: 1.3
    font-style: italic
    text-align: center

.performance-list
    stacked-list(border: 1px solid dark)

.performance-date
    word-spacing: -0.2em
    &::after
        content: ' / '
        margin-right: 0.5em

.performance-title
    display: inline
    font-size: var(--l)

.button
    font-family: body-font
    font-size: var(--m)
    background: inherit
    border: 1px solid dark
    border-radius: 0.2em
    padding: 0.2em 0.8em
    cursor: pointer
    &:hover
        background: dark
        color: light-background-color



