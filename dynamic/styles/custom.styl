//////////
// recs //
//////////

.rec
    padding: var(--semi-unit)
    border: 2px solid var(--primary)


//////////
// home //
//////////

.site-title
    hlist(sep: '/', spacing-left: 0.1em, spacing-right: 0.1em)   
    font-family: heading-font
    text-transform: uppercase
    font-size: var(--xxxl)
    @media big-heading
        font-size: var(--xxxxl)

.site-subtitle  
    font-family: body-font
    margin-top: -0.4em
    font-size: var(--l)
    @media big-heading
        font-size: var(--xl)


//////////
// text
/////////

.text-nav
    ul
        hlist(sep:'•')
        margin-top: var(--unit)

.text-list
    stacked-list(border=1px dotted soft-border-color)
    highlight-list()
    li
        padding: var(--semi-unit) var(--semi-unit)
        &:nth-child(2)   
            border-top: 1px dotted soft-border-color
        &:nth-child(n+4)
            display: none
    .text-title
        font-size: var(--l)
        font-family: body-font
        font-weight: normal
        text-transform: none
        margin-bottom: 0.4em
    p
        line-height: 1.2

.text
    max-width: text-width
    p+h2
        margin-top: var(--unit)
    h2
        font-family: inherit
        font-size: var(--m)
        font-weight: normal
        text-transform: uppercase
        margin-top: 0
        margin-bottom: var(--semi-unit)
    .text-title
        margin-bottom: var(--two-units)

.text.listofshorts
    margin-left: auto
    margin-right: auto
    max-width: 400px 
    .text-title
        text-align: center
    ul
        stacked-list(spacing: var(--two-units), border: 1px solid dark)
    p
        @extends .poetic-short
   

.spaced
    p:not(:last-of-type)
        margin-bottom: calc(0.5*var(--unit-2))

.bigspaces
    p:not(:last-of-type)
        margin-bottom: var(--unit-2)

.dialogue 
    p
        text-indent: 0
    em
        margin-top: 20px


/////////
// web //
/////////

#web-page
    background: #e
  
.websites
    max-width: 800px
    stacked-list(spacing:var(--unit), border:4px solid dark)

.website
    @media two-cols
        display: grid
        grid-template-columns: 1fr 1fr
        grid-column-gap: var(--unit)

.website-image
    width: 100%

.website-description
    display: flex
    justify-content: space-between
    line-height: var(--unit) !important
    font-family: heading-font
    text-transform: uppercase
    @media two-columns-sites
        display: block
        order: 5
    
.website-title
    font-family: heading-font
    font-size: var(--xl)
    @media big-mobile
        font-size: var(--xxl)
    @media big-heading
        font-size: var(--xxxxl)
    margin-bottom: var(--unit)

.website-link
    min-width: 3em

#workflow
    display: grid
    grid-column-gap: var(--unit)
    grid-row-gap: var(--unit)
    @media desktop-nav
        grid-template-columns: 1fr 2fr

#base
    p+ul
        margin-top: var(--semi-unit)
    ul
        stacked-list(border: 1px solid dark)

.product
    display: flex
    flex-direction: column
    ul
        stacked-list(border: 1px solid dark)

.product-description
    margin-bottom: var(--unit)

.product-price
    margin-top: auto
    border: 2px solid dark
    text-align: center
    padding: var(--semi-unit) 0 
    font-size: var(--l)

#workflow-figure
    display: flex
    justify-content: center

////////////
// grafik //
////////////

.lb-caption
    font-size: var(--m) !important
    font-family: body-font !important
    font-weight: normal !important
    color: white !important
    letter-spacing: 0.1em
    text-transform: uppercase

.lb-dataContainer
    margin-top: 8px !important


/////////////////
// inspiration //
/////////////////

.inspiration-section        
    ul
        stacked-list(border: 1px dotted dark)
    .card-title
        text-transform: uppercase
    .card
        background: var(--primary)

.lyrics
    margin-bottom: var(--two-units)
    stacked-list(border: 1px solid black, spacing: var(--unit))

.lyrics-text
    font-family: heading-font
    font-size: var(--xl)
    line-height: heading-line-height
    margin-bottom: var(--quarter-unit)


//////////
// shop //
//////////

#shop-intro
    margin: 0 auto

// #shop
//     background-color: white

.sprd-header__title
    color: white !important

#spreadshirt-shop
    // margin-top: var(--two-units)
    *
        font-family: body-font
        font-size: var(--s)

#filterBar
    *
        font-size: var(--s)
    .sprd-Item
        border-bottom: 1px dotted dark
    .sprd-Label
        line-height: 1.3
        padding: 10px 0

.sprd-price
        *
            font-size:var(--s)

#grossgedrucktes
    margin-top: var(--two-units)
    font-size: var(--l)

//////////////
// shooting //
//////////////

#shooting-page
    background: #e
    #candidates
        max-width: 800px
        stacked-list(spacing:var(--unit), border:4px solid dark)
    .person
        img
            width: 100%
    .person-name
        font-family: heading-font
        line-height: heading-line-height
        text-transform: uppercase
        font-size: var(--xxxl)
    .person-comments
        margin-top: var(--semi-unit)

.playground
    img
        margin-top: var(--semi-unit)
        display: block
    & + .playground
        margin-top: var(--unit)


/////////////
//  quotes //
/////////////

.quotes
    columns: 300px
    gap: var(--two-units)

.quote + .quote
    margin-top: var(--two-units)

.quote-content    
    font-size: var(--l)
    line-height: 1.2

.quote-footer
    margin-top: 0.1em

.quote-author::before
   content: '—'





///////////////
// lessinger //
///////////////

.lessinger
    grid(min-column-width: 100px, gap:0)

/////////////
// notizen //
/////////////

.notes-list
    vlist(spacing: var(--two-units), border: 1px solid dark)
    font-family: mono-font
    font-weight: 300
    font-size: var(--xxl)

