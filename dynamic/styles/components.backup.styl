////////////
// layout //
////////////

.center-wrapper
    margin: 0 auto
    padding-left: var(--page-padding)
    padding-right: @padding-left
    max-width: max-page-width

.fullwidth-wrapper
    padding: 0 var(--unit)
    @media l
        padding: 0 var(--four-units)

.text-wrapper
    max-width: max-text-width

grid(min-column-width = 100px, gap = var(--unit))
    display: grid
    grid-template-columns: repeat(auto-fit, minmax(min-column-width, 1fr ))
    grid-column-gap: gap
    grid-row-gap: gap

.textplus
    @media textplus
        display: flex

.textplus-text
    margin: var(--unit) 0 0 0
    @media textplus
        margin: 0 var(--unit) 0 0

.textplus-plus
    align-self: left

.plustext
    @media textplus
        display: flex

.plustext-text
    margin: var(--unit) 0 0 0
    @media textplus
        margin: 0 0 0 var(--unit)

.plustext-plus
    align-self: left

.default-columns
    columns: 200px
    column-gap: var(--semi-unit)
    *
        margin-bottom: var(--semi-unit)


//////////
// text // 
//////////

.spaced-paragraphs 
    p+p
        margin-top: var(--semi-unit) 

.indented-paragraphs 
    p+p
        text-indent: var(--unit)

///////////
// links //
///////////

.arrow
    &::before
        content: '\2192'
        margin-right: 0.3em
        display: inline-block
        
.arrow-links a
    @extends .arrow

.color-links a
    color: link-color

.underlined
    text-decoration: underline

.underlined-links a
    @extends .underlined

.underline-on-hover
    &:hover
        text-decoration: underline

.underline-on-hover-links a
    @extends .underline-on-hover

.color-on-hover-links 
    a:hover
        color: link-color


///////////
// lists //
///////////

.default-list
    list-style-type: disc
    list-style-position: inside
    li + li
        margin-top: var(--semi-unit)

.arrow-list
    list-style: none
    li
        display: flex
    li:before
        content: '\2192 \a0'        

stacked-list(spacing=var(--semi-unit), border=1px dotted dark)
    list-style: none
    padding: 0
    li  
        padding: spacing 0 
        border-bottom: border
        &:first-child
            border-top: border

hlist(sep='', spacing-left=0.5em, spacing-right=0.5em)
    list-style: none
    margin: 0
    li 
        display: inline
    li:not(:last-child)
        &::after
            margin-left: spacing-left
            margin-right: spacing-right
            content: sep
    li:not(:first-child)
        margin-left: spacing-left

.comma-list
    hlist(', ', 0, 0)

highlight-list(background = dark, color = white)
    li:hover
        background: background
        color: color
        cursor: pointer
    a:hover
        color: inherit
    a
        text-decoration: none

striped-list(color)
    li
        padding: var(--semi-unit)
    li:nth-child(2n+1)

        background-color: color

default-dl(row-gap=var(--semi-unit), weight=bold)
    display: grid
    grid-template-columns: min-content auto
    grid-row-gap: row-gap
    grid-column-gap: var(--unit)
