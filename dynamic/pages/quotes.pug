---
pagetitle: Zitate
---
extends /default

block content
   ul.quotes
      for quote in global.quotes
         li
            blockquote.quote
               p.quote-text= quote.text
               footer.quote-footer
                  span.quote-author 
                     if quote.author
                        if quote.author.label
                           = quote.author.label
                        else 
                           = quote.author
                  if quote.author && quote.source
                     span &ensp;(#{quote.source.label})