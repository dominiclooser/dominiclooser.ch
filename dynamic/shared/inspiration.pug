extends /base
include /wikidata
include /image
include /page_heading
include /menu

block content
   +pageHeader(true)
   .wrapper
      +pageHeading('Tipps: ' + local.title)
      .page-main
         if local.flat
            .cards
               for cardItems, cardTitle in local.content
                  .card
                     header.card-header
                        h3.card-title
                           +item(cardTitle)
                     main.card-main
                        ul.card-list
                           for item in cardItems
                              li: +item(item)
         else
            for sectionContent, section in local.content
               section.s1
                  header.s1-header
                     h2.h2= section
                  main.s1-main.cards
                     for cardItems, cardTitle in sectionContent
                        .card
                           //- +responsiveImage(local.image)(class='card-background-image')
                           header.card-header
                              h3.card-title
                                 +item(cardTitle)
                           main.card-main
                              ul.card-list
                                 for item in cardItems
                                    li: +item(item)
      include /footer
