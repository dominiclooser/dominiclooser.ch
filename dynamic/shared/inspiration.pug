extends /default
include /wikidata
include /image

block content

   if local.flat
      .colored-cards
         for cardItems, cardTitle in local.content
            .card
               header.card-header
                  h3.card-title= cardTitle
               main.card-main
                  ul.card-list
                     for item in cardItems
                        li: +item(item)
                        

   else
      for sectionContent, section in local.content
         section.s1
            header.s1-header
               h2.h2= section
            main.s1-main.colored-cards
               for cardItems, cardTitle in sectionContent
                  .card
                     //- +responsiveImage(local.image)(class='card-background-image')
                     header.card-header
                        h3.card-title= cardTitle
                     main.card-main
                        ul.card-list
                           for item in cardItems
                              li: +item(item)


   script(src='/scripts/wikibase-sdk.min.js')
   script(src='/scripts/wikidata.js')