header.desktop-page-header
   a(href='/').logo Dominic Looser
   nav.desktop-nav
      ul
         for item in global.nav
            unless item.link == '/'
               li: a(href=item.link)= item.title

header.mobile-page-header
   a(href='/').logo 
      span Dominic 
      span Looser
   p.open-nav Menu

nav.mobile-nav
   svg.close(viewBox='0 0 100 100')
      line(x1=10, y1=10, x2=90, y2=90)
      line(x1=10, y1=90, x2=90, y2=10)
   ul
      for item in global.nav
         li: a(href=item.link)= item.title

script
   :coffee-script
      mobileNav = document.querySelector('.mobile-nav')

      document.querySelector('.open-nav').addEventListener 'click', ->
         mobileNav.style.display = 'block'

      document.querySelector('.close').addEventListener 'click', ->
         mobileNav.style.display = 'none'