include /wikidata
include /video

mixin section(title)
   if block
      section.s1
         header.s1-header
            h2.h2= title
         .s1-main
            block

mixin subsection(title)
   if block
      section.s2
         header.s2-header
            h3.h3= title
         .s2-main
            block


mixin listSection(data, title, lang)
   if data
      +section(title)
         ul.default-list
            for item in data
               li
                  +item(item, lang=lang)


mixin flatSection(title, data, props=[], lang='en')
      if data
         +section(title)
            dl.dl
               for prop in props
                  if data[prop.key]
                     dt= prop.label
                     dd
                        +item(data[prop.key], lang=lang)


mixin videoSubsection(data, title)
   if data
      +subsection(title)
         ul.videos
            for video in data
               li.video
                  +youtubeVideo(video.youtube_id)


mixin listSubsection(data, title)
   if data
      +subsection(title)
         ul.default-list
            for item in data
               li
                  if attributes.lang
                     +item(item, attributes.lang)
                  else
                     +item(item)