include /wikidata

mixin section(title)
   if block
      section.s1
         header.s1-header
            h2.h2= title
         .s1-main
            block

mixin listSection(data, title)
   if data
      +section(title)
         ul.default-list
            for item in data
               li
                  +item(item)


mixin flatSection(title, data, props=[])
      if data
         +section(title)
            dl.dl
               for prop in props
                  if data[prop.key]
                     dt= prop.label
                     dd
                        +item(data[prop.key])



mixin listSubsection(data, title)
   if data
      section.s2
         header.s2-header
            h3.h3= title
         .s2-main
            ul.default-list
               for item in data
                  li
                     +item(item)