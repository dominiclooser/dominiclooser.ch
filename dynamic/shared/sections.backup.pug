include /wikidata

mixin section(title)
   if block
      section.s1
         header.s1-header
            h2.h2= title
         .s1-main
            block

mixin videoSection(videos, title)
   if videos
      +section(title)
         .video-grid
            for video in videos
               .video
                  if video.youtube_id
                     iframe(width='560', height='315', src='https://www.youtube.com/embed/' + video.youtube_id, frameborder='0', allow='accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture', allowfullscreen)
                  else if video.vimeo_id
                     a(href='https://vimeo.com/' + video.vimeo_id) Auf Vimeo schauen
                  else if video.youmaker_id
                     iframe(src=`https://www.youmaker.com/embed/${video.youmaker_id}`, width="560", height="315", frameborder="0", allowfullscreen)
                  h3.video-title= video.title
                  p= video.description
mixin textSection(title, data)
   +section(title)
      != marked(data)

mixin dlSection(title, data, lang=global.settings.lang)
   if data
      +section(title)
         dl.dl
            for definition, term in data
               dt
                  +item(term, lang=lang)
               dd 
                  +item(definition, lang=lang)

mixin listSection(data, title)
   if data
      +section(title)
         ul.default-list
            for item in data
               li
                  +item(item)


mixin flatSection(title, data, props=[])
   if data
      +section(title)
         dl.dl
            for prop in props
               if data[prop.key]
                  dt= prop.label
                  dd
                     +item(data[prop.key])


mixin subsection(title)
   section.s2
      header.s2-header
         h3.h3= title
      .s2-main
         block

mixin listSubsection(data, title)
   if data
      +subsection(title)
         ul.default-list
            for item in data
               li
                  +item(item)

mixin imageSubsection(title, dir)
   if containsImages(dir)
      +subsection(title)
         .image-columns
            for fileId in getImages(dir)
               +lightboxImage(fileId, lightboxGroup='inspirational_images')